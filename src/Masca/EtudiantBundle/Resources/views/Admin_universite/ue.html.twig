{% extends "MascaEtudiantBundle::admin-universite.html.twig" %}
{% block admin_univ_body %}
    <h4>Les unités d'enseignement</h4>
    <a href="{{ path('creer_ue_universite') }}">
        <img title="Nouvelle enregistrement" src="{{ asset('assets/add.png') }}">
    </a>
    <hr/>
    <table id="tableshow" class="table  table-hover table-bordered table-striped avectri">
        <thead>
        <tr>
            <th class="selection" data-tri="1" data-type="num">Intitulé</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for ue in ues %}
            <tr>
                <td>{{ ue.intitule }}</td>
                <td>
                    <div class="align-center">
                        <a href="{{ path('modifier_ue_universite',{'id':ue.id}) }}">
                            <img title="Modification" src="{{ asset('assets/edit.png') }}">
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucun ue enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}