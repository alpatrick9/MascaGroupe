{% extends "MascaEtudiantBundle::admin-universite.html.twig" %}
{% block admin_univ_body %}
    <h3>Liste des filieres</h3>
    <a href="{{ path('ajouter_filiere_univ') }}">
        <img title="Nouvelle enregistrement" src="{{ asset('assets/add.png') }}">
    </a>
    <hr/>
    <table id="tableshow" class="table  table-hover table-bordered table-striped avectri">
        <thead>
        <tr>
            <th class="selection" data-tri="1" data-type="num">Filière</th>
            <th>Droit (Ar)</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for filiere in filieres %}
            <tr>
                <td>{{ filiere.intitule }}</td>
                <td>{{ filiere.droitInscription }}</td>
                <td>
                    <div class="align-center">
                        <a href="{{ path('modifier_filiere_univ',{'filiere_id':filiere.id}) }}">
                            <img title="Modification" src="{{ asset('assets/edit.png') }}">
                        </a>
                        <a href="{{ path('supprimer_filiere_univ',{'id': filiere.id}) }}" onclick="return confirm('Voulez vous supprimer le filière {{ filiere.intitule }}? Si oui, toutes les informations liées à ce filière seront supprimées!')">
                            <img title="Supprimer" src="{{ asset('assets/delete.png') }}">
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucun filiere enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if filieres|length > 0 %}
        <div class="pagination align-center">
            <ul>
                {% for p in range(1, nbPage) %}
                    <li{% if p == page %} class="active"{% endif %}>
                        <a href="{{ path('admin_univ_filiere', {'page': p}) }}">{{ p }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endblock %}