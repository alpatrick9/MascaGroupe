{% extends "MascaEtudiantBundle::layout.html.twig" %}
{% block title %}Reinscription universitaire{% endblock %}
{% block etudiant_body %}
    <h4>{{ fullEtudantName }}</h4>
    <div class="row">
        <div class="span12">
            <fieldset>
                <legend>Infos Etudie</legend>
                <form method="post">
                    {{ form_widget(sonFiliereForm) }}
                    <div class="align-right">
                        <input type="submit" value="Enregistrer" class="btn btn-primary">
                        <a href="{{ path('details_etude_universitaire', {'sonFiliere_id':sonFiliereId}) }}" class="btn btn-primary">Annuler</a>
                    </div>
                </form>
            </fieldset>
        </div>
    </div>
{% endblock %}