{% extends "MascaEtudiantBundle::layout.html.twig" %}
{% block etudiant_body %}
    <h3>Listes de retards de {{ lyceen.person.nom }} {{ lyceen.person.prenom }}</h3>
    <div>
        <a href="{{ path('details_lyceen',{'id': lyceen.id}) }}">
            <img title="Retour" src="{{ asset('assets/cancel.png') }}">
        </a>
        <a href="{{ path('creer_retard_lyceen',{'id': lyceen.id}) }}">
            <img title="Nouvelle enregistrement" src="{{ asset('assets/add.png') }}">
        </a>
    </div>
    <hr/>
    <table id="tableshow" class="table  table-hover table-bordered table-striped avectri">
        <thead>
        <tr>
            <th class="selection" data-tri="1" data-type="num">Classe</th>
            <th>Retard le</th>
            <th>Arriver en cours à</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for retard in listRetard %}
            <tr>
                <td>{{ lyceen.sonClasse.intitule }}</td>
                <td>{{ retard.dateRetard | date('d/m/Y') }}</td>
                <td>{{ retard.heure | date('h:i')}}</td>
                <td>
                    <a href="{{ path('modifier_retard_lyceen', {'id':retard.id}) }}" class="btn btn-primary">modifier</a>
                    <a href="{{ path('supprimer_retard_lyceen', {'id':retard.id}) }}" class="btn btn-danger" onclick="return confirm('Vous vous supprimer?')">supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun absence enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock%}