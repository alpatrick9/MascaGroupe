{% extends 'MascaEtudiantBundle::layout.html.twig' %}
{% block etudiant_body %}
    <h3>Page d'enregistrement/modification d'absence</h3>
    <p>Etudiant concern√©: <b>{{ lyceen.person.prenom }} {{ lyceen.person.nom }}</b></p>
    {% if error_message is defined %}
        <p style="color: red "> {{ error_message }}</p>
    {% endif %}

    <form method="post">
        {{ form_widget(form) }}
        <div class="submit-style">
            <div class="floatleft">
                <a href="{{ path('absence_lyceen',{'id':lyceen.id}) }}">
                    <img title="Annuler" src="{{ asset('assets/cancel.png') }}">
                </a>

            </div>
            <div class="floatright">
                <input type="image" src="{{ asset('assets/save.png') }}" title="Enregitrer">
            </div>
        </div>
    </form>
{% endblock %}