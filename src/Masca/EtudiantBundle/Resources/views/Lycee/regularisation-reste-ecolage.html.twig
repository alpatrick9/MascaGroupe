{% extends "MascaEtudiantBundle::layout.html.twig" %}
{% block etudiant_body %}
    <h3>Page de régularisation d'ecolage</h3>
    <h5>Année scolaire {{ renseignement.lyceen.anneeScolaire  }} </h5>
    <p>Etudiant concerné: <b>{{ renseignement.lyceen.person.nom }} {{ renseignement.lyceen.person.prenom }}</b> </p>
    <p>Reste à payer <b>{{ reste }} Ar</b></p>

    <div class="row">
        <div class="span10">
            <form method="post">
                {{ form_widget(form) }}
                {{ form_widget(dateForm) }}
                <div class="submit-style">
                    <div class="floatleft">
                        <a href="{{ path('ecolage_lyceen', {'id':renseignement.lyceen.id}) }}">
                            <img title="Annuler" src="{{ asset('assets/cancel.png') }}">
                        </a>

                    </div>
                    <div class="floatright">
                        <input type="image" src="{{ asset('assets/save.png') }}" title="Enregitrer">
                    </div>
                </div>
            </form>
        </div>

    </div>
{% endblock %}