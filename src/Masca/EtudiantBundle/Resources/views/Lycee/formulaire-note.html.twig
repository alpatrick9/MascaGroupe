{% extends 'MascaEtudiantBundle::layout.html.twig' %}
{% block etudiant_body %}
    <h3>Page d'ajout/modification d'un note</h3>
    {% if error_message is defined %}
        <p style="color: red "> {{ error_message }}</p>
    {% endif %}
    <p>Etudiant concern√©: <b>{{ lyceen.person.prenom }} {{ lyceen.person.nom }}</b></p>
    <form method="post">
        {{ form_widget(form) }}
        <div class="align-right">
            <input type="submit" value="Ajouter" class="btn">
            <a href="{{ path('liste_notes_lyceen',{'lyceen_id':lyceen.id}) }}" class="btn">Annuler</a>
        </div>
    </form>
{% endblock %}