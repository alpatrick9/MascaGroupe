{% extends "MascaEtudiantBundle::layout.html.twig" %}
{% block title %} Administration lycée {% endblock %}
{% block etudiant_body %}
    <h4>Les absence de {{ lyceen.person.nom }} {{ lyceen.person.prenom }}</h4>
    <div>
        <a href="{{ path('details_lyceen',{'id': lyceen.id}) }}" class="btn btn-primary"><<</a>
        <a href="{{ path('absence_enregistrement_lyceen', {'id': lyceen.id}) }}" class="btn">Nouvelle absence</a>
    </div>
    <hr/>
    <table id="tableshow" class="table  table-hover table-bordered table-striped avectri">
        <thead>
        <tr>
            <th class="selection" data-tri="1" data-type="num">Classe</th>
            <th>Absent le</th>
            <th>Partie de la journée</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for absence in listAbs %}
            <tr>
                <td>{{ lyceen.sonClasse.intitule }}</td>
                <td>{{ absence.dateAbsent | date('d/m/Y') }}</td>
                <td>{{ absence.partieJournee }}</td>
                <td>
                    <a href="{{ path('absence_modifier_lyceen', {'id':absence.id}) }}" class="btn btn-primary">modifier</a>
                    <a href="{{ path('absence_supprimer_lyceen', {'id':absence.id}) }}" class="btn btn-danger">supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun absence enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock%}