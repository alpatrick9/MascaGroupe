{% extends "MascaEtudiantBundle::layout.html.twig" %}
{% block etudiant_body %}
    <h3>Informations détaillées concernant l'étudiant</h3>
    {% if error_message is defined %}
        <p style="color: red "> {{ error_message }}</p>
    {% endif %}
    <div class="row">
        <div class="span4">
            <fieldset>
                <legend>Etat civil</legend>
                <table class="table  table-hover table-bordered table-striped">
                    <tr>
                        <td class="text-bold"><b>N° matricule:</b></td>
                        <td>{{ lyceen.person.numMatricule }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Nom:</b></td>
                        <td>{{ lyceen.person.nom }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Prénom:</b></td>
                        <td>{{ lyceen.person.prenom }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Date de naissance:</b></td>
                        <td>{{ lyceen.person.dateNaissance |date('d M Y') }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Lieu de naissance:</b></td>
                        <td>{{ lyceen.person.lieuNaissance }}</td>
                    </tr>
                </table>
            </fieldset>
        </div>
        <div class="span4">
            <fieldset>
                <legend>Étude</legend>
                <table class="table  table-hover table-bordered table-striped">
                    <tr>
                        <td class="text-bold"><b>N°:</b></td>
                        <td>{{ lyceen.numeros }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Année scolaire:</b></td>
                        <td>{{ lyceen.anneeScolaire }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Classe:</b></td>
                        <td>{{ lyceen.sonClasse.intitule }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Date de réinscription:</b></td>
                        <td>{{ lyceen.dateReinscription |date('d M Y') }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Droit de réinscription:</b></td>
                        <td>{{ lyceen.sonClasse.droitInscription }} Ar</td>
                    </tr>
                </table>
            </fieldset>
        </div>
        <div class="span4">
            <fieldset>
                <legend>Complémentaire</legend>
                <table class="table  table-hover table-bordered table-striped">
                    <tr>
                        <td class="text-bold"><b>Adresse:</b></td>
                        <td>{{ lyceen.infoEtudiant.adresse }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Téléphone:</b></td>
                        <td>{{ lyceen.infoEtudiant.tel }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>E-mail:</b></td>
                        <td>{{ lyceen.infoEtudiant.email }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Nom de sa mère:</b></td>
                        <td>{{ lyceen.infoEtudiant.nomMere }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Nom de son père:</b></td>
                        <td>{{ lyceen.infoEtudiant.nomPere }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Contact de ses parents:</b></td>
                        <td>{{ lyceen.infoEtudiant.telParent }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>E-mail de ses parents:</b></td>
                        <td>{{ lyceen.infoEtudiant.emailParent }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Nom du tuteur:</b></td>
                        <td>{{ lyceen.infoEtudiant.nomTuteur }}</td>
                    </tr>
                    <tr>
                        <td class="text-bold"><b>Réduction ecolage:</b></td>
                        <td>{{ lyceen.infoEtudiant.reduction }} Ar</td>
                    </tr>
                </table>
            </fieldset>
        </div>
    </div>
    <div class="row">
        <div class="span12">
            <table>
                <tr>
                    <td style="    max-width: 58em;width: 58em;">
                        <b>NB: </b></br> <textarea disabled rows="5">{{ lyceen.nb}}</textarea>
                    </td>
                    <td>
                        <a href="{{ path('nb_lyceen', {'id': lyceen.id}) }}" class="btn btn-primary">Modifier NB</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="align-center">
            <a href="{{ path('accueil_lycee')}}">
                <img title="Retour" src="{{ asset('assets/cancel.png') }}" class="custom-margin">
            </a>
            <a href="{{ path('modifier_lyceen', {'id':lyceen.id}) }}" >
                <img title="Modification" src="{{ asset('assets/edit.png') }}" class="custom-margin">
            </a>
            <a href="{{ path('reinscription_lyceen', {'id':lyceen.id}) }}">
                <img title="Reinscription" src="{{ asset('assets/reinscription.png') }}" class="custom-margin">
            </a>
            <a href="{{ path('liste_notes_lyceen', {'lyceen_id':lyceen.id}) }}">
                <img title="Note d'examen" src="{{ asset('assets/note.png') }}" class="custom-margin">
            </a>
            <a href="{{ path('ecolage_lyceen', {'id':lyceen.id}) }}">
                <img title="Ecolage" src="{{ asset('assets/ecolage.png') }}" class="custom-margin">
            </a>
            <a href="{{ path('absence_lyceen', {'id':lyceen.id}) }}" >
                <img title="Absence" src="{{ asset('assets/presence.png') }}" class="custom-margin">
            </a>
            <a href="{{ path('retard_lyceen', {'id':lyceen.id}) }}">
                <img title="Retard" src="{{ asset('assets/retard.png') }}" class="custom-margin">
            </a>

        </div>
    </div>
{% endblock %}