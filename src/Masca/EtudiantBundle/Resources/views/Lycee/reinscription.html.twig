{% extends "MascaEtudiantBundle::layout.html.twig" %}
{% block title %}Reinscription lyceen{% endblock %}
{% block etudiant_body %}
<div class="row">
    <div class="span6">
        <fieldset>
            <legend>Infos personnelle</legend>
            <table>
                <tr>
                    <td><b>N° matricule:</b></td>
                    <td>{{ lyceen.person.numMatricule }}</td>
                </tr>
                <tr>
                    <td><b>Nom:</b></td>
                    <td>{{ lyceen.person.nom }}</td>
                </tr>
                <tr>
                    <td><b>Prénom:</b></td>
                    <td>{{ lyceen.person.prenom }}</td>
                </tr>
                <tr>
                    <td><b>Date de naissance:</b></td>
                    <td>{{ lyceen.person.dateNaissance |date('d M Y') }}</td>
                </tr>
                <tr>
                    <td><b>Lieu de naissance:</b></td>
                    <td>{{ lyceen.person.lieuNaissance }}</td>
                </tr>
            </table>
        </fieldset>
    </div>
    <div class="span6">
        <fieldset>
            <legend>Infos Etudie</legend>
            <form method="post">
                {{ form_widget(lyceenForm) }}
                <div class="align-right">
                    <input type="submit" value="Enregistrer" class="btn btn-primary">
                    <a href="{{ path('details_lyceen', {'id':lyceen.id}) }}" class="btn btn-primary">Annuler</a>
                </div>
            </form>
        </fieldset>
    </div>
</div>
{% endblock %}