{% extends 'MascaEtudiantBundle::admin-lycee.html.twig' %}
{% block admin_lycee_body %}
    <h5>Création/modification grille ecolage lycée</h5>
    {% if error_message is defined %}
        <p style="color: red "> {{ error_message }}</p>
    {% endif %}
    <form method="post">
        {{ form_widget(form) }}
        <div class="submit-style">
            <div class="floatleft">
                <a href="{{ path('grille_ecolage_lycee') }}">
                    <img title="Annuler" src="{{ asset('assets/cancel.png') }}">
                </a>

            </div>
            <div class="floatright">
                <input type="image" src="{{ asset('assets/save.png') }}" title="Enregitrer">
            </div>
        </div>
    </form>
{% endblock %}