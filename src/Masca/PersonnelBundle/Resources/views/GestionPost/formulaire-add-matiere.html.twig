{% extends "MascaPersonnelBundle::layout.html.twig" %}
{% block personnel_body %}
    <h3>Ajouter un mati√®re enseigner par {{ info.status.employer.person.nom }} {{ info.status.employer.person.prenom }}</h3>
    {% if error_message is defined %}
        <p style="color: red "> {{ error_message }}</p>
    {% endif %}
    <form method="post">
        {{ form_widget(form) }}
        <div class="clearfix"></div>
        <div class="submit-style">
            <div class="floatleft">
                <a href="{{ path('details', {'id': info.status.employer.id}) }}">
                    <img title="Annuler" src="{{ asset('assets/cancel.png') }}">
                </a>
            </div>
            <div class="floatright">
                <input type="image" src="{{ asset('assets/save.png') }}" title="Enregistement">
            </div>
        </div>
    </form>
{% endblock %}